<h1>Password Reset</h1>
<%= form_tag password_resets_path, :method => :post do %>
  <div class="field">
    <p>
      <%= label_tag :email %>
      <br/>
      <%= text_field_tag :email, params[:email] %>
    </p>
  </div>
  <div class="actions"></div>
  <p class="button">
    <%= submit_tag "Reset Password" %>
  </p>
<% end %>