<h1>Login</h1>
<p>Welcome back! Please fill out your login information below.</p>

<%= form_tag sessions_path do |f| %>
  <p>
      <%= label_tag :email %>
      <%= text_field_tag :email, params[:email] %>
  </p>
  
  <p>
      <%= label_tag :password %>
      <%= password_field_tag :password %>
      <%= link_to "Forgot your password?", new_password_reset_path %>
  </p>
  
  <p class="button"><%= submit_tag %></p>
  
<% end %>

<p>Not a returning user? <%= link_to "Sign up here", sign_up_path %></p>
