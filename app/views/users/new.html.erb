<h1>Sign Up</h1>
<p>Welcome to Blocmetrics! Please enter a valid email and password below.</p>
<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
        <h3>Form is invalid, please check error message.</h3>
        <ul>
            <% for message in @user.errors.full_messages %>
               <li><%= message %></li>
            <% end %>
        </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </p>
  <p class="button"><%= f.submit %></p>
<% end %>

